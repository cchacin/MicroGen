<?xml version="1.0" encoding="UTF-8"?>
<server description="OpenLiberty Server">

    <featureManager>
        <feature>javaee-8.0</feature>
        <feature>microProfile-3</feature>
        <feature>usr:opentracingZipkin-0.31</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="9080" httpsPort="9443"/>

    <keyStore id="defaultKeyStore" password="Liberty"/>

    <basicRegistry id="basic" realm="MicroProfileMetrics">
        <user name="admin" password="adminadmin"/>
        <user name="nonadmin" password="guest"/>
    </basicRegistry>

    <administrator-role>
        <user>admin</user>
    </administrator-role>
    
    <applicationManager autoExpand="true"/>

    <logging traceSpecification="com.sebastian_daschner.*=finest" messageFormat="json" messageSource="message,trace,accessLog,ffdc,audit" logDirectory="/tmp/logs" />
    
    <opentracingZipkin />

</server>
